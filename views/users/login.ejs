<% layout('/index') -%>
<form action="" class="form-horizontal" id="sl_login_form" method="post" role="form">
	<input type="hidden" id="message_no_email" value="<%= gettext('not_insert_email') %>" />
	<input type="hidden" id="message_no_password" value="<%=  gettext('not_insert_password') %>" />
	<input type="hidden" id="message_invalid_email" value="<%=  gettext('invalid_email') %>" />
	<input type="hidden" id="message_invalid_password" value="<%= gettext('invalid_password') %>" />
  <div class="form-group">
    <label for="sl_user_email" class="col-sm-2 control-label"><%= gettext('label_email') %></label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="sl_user_email" name="email" placeholder="Email" required="required" />  
    </div>
  </div>
  <div class="form-group">
    <label for="sl_user_password" class="col-sm-2 control-label"><%=  gettext('label_password') %></label>
    <div class="col-sm-10"> 
      <input type="password" class="form-control" id="sl_user_password" name="password" placeholder="Password" required="required" />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <input type="checkbox" id="remember_email"><%=  gettext('remember_email') %>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary"><%=  gettext('login') %></button>
    </div>
  </div>
</form>